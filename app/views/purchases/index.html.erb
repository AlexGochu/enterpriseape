<h1>Listing purchases</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Quantity</th>
        <th>Invoice</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @purchases.each do |purchase| %>
          <tr>
            <td><%= purchase.name %></td>
            <td><%= purchase.category %></td>
            <td><%= purchase.quantity %></td>
            <td><%= purchase.invoice %></td>
            <td><%= link_to 'Show', purchase, class: 'btn btn-mini btn-default' %></td>
            <td><%= link_to 'Edit', edit_purchase_path(purchase), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', purchase, method: :delete, class: 'btn btn-mini btn-danger', data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Purchase', new_purchase_path %>
