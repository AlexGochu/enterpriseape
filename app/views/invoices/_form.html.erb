<div class="row">
  <%= form_for @invoice, html: {class: "form-horizontal"} do |f| %>
      <% if @invoice.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

            <ul>
              <% @invoice.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field form-group">
        <%= f.label :date, class: 'col-sm-2 control-label' %><br>

        <div class="col-sm-10">
          <%= f.date_select :date %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :company, class: 'col-sm-2 control-label' %><br>

        <div class="col-sm-10">
          <%= f.text_field :company %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :tax, class: 'col-sm-2 control-label' %><br>

        <div class="col-sm-10">
          <%= f.text_field :tax %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :saleperson, class: 'col-sm-2 control-label' %><br>

        <div class="col-sm-10">
          <%= f.text_field :saleperson %>
        </div>
      </div>
      <div class="actions form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">

          <%= f.submit 'Submit', class:'btn btn-default' %>
        </div>
      </div>
  <% end %>
</div>
